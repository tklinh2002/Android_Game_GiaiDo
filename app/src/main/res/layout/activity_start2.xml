<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#F6A731"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <TextView
        android:id="@+id/tvName"
        android:layout_width="300dp"
        android:layout_height="30dp"

        android:text="Chào bạn "
        android:textSize="18dp" />

    <TextView
        android:id="@+id/tvDiem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:text="0/100"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/tvA"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:layout_below="@+id/tvDiem"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="350dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/color_answer_blue"
        android:gravity="center"
        android:text="A. Con be"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/tvB"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:layout_below="@+id/tvDiem"
        android:layout_alignParentRight="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="350dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@+id/tvA"
        android:background="@drawable/color_answer_blue"
        android:gravity="center"
        android:text="A. Con be"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/tvC"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:layout_below="@+id/tvA"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/color_answer_blue"
        android:gravity="center"
        android:text="A. Con be"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/tvD"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:layout_below="@+id/tvB"
        android:layout_alignParentRight="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@+id/tvA"
        android:background="@drawable/color_answer_blue"
        android:gravity="center"
        android:text="A. Con be"
        android:textSize="22dp" />

    <ImageView
        android:id="@+id/img1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="300dp"
        android:adjustViewBounds="true" />

    <RelativeLayout
        android:layout_width="346dp"
        android:layout_height="277dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tvDiem">

        <ImageView
            android:id="@+id/imgQuestion"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tvTitleCauHoi"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/layout_dapan"
            android:gravity="center_horizontal|top"
            android:text="Câu hỏi số 1"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/tvCauHoi"
            android:layout_width="310dp"
            android:layout_height="137dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:gravity="center"
            android:text=" con gì?"
            android:textSize="20dp" />
    </RelativeLayout>

    <Button
        android:id="@+id/btnThoat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="Thoát" />


</RelativeLayout>